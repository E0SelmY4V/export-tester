{
	"compilerOptions": {
		"module": "CommonJS",
		"moduleResolution": "Node",
		"target": "ESNext",
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"allowSyntheticDefaultImports": true,
		"noImplicitAny": true,
		"strict": true,
		"alwaysStrict": true,
		"strictPropertyInitialization": true,
		"strictBindCallApply": true,
		"noImplicitThis": true,
	},
	"exclude": [
		"node_modules",
		"**/node_modules/*"
	],
	"files": [
		"./lib/index.ts",
		"./lib/types.ts",
	],
}