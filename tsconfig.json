{
	"compilerOptions": {
		"module": "CommonJS",
		"moduleResolution": "Node",
		"target": "ES5",
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"allowSyntheticDefaultImports": true,
		"noImplicitAny": true,
		"strict": true,
		"alwaysStrict": true,
		"strictPropertyInitialization": true,
		"strictBindCallApply": true,
		"noImplicitThis": true,
		"outDir": "./dist",
		"declaration": true,
		"sourceMap": true,
	},
	"exclude": [
		"node_modules",
		"**/node_modules/*"
	],
	"include": [
		"./lib",
	],
}